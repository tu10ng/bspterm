[Desktop Entry]
Version=1.0
Type=Application
Name=$APP_NAME
GenericName=Text Editor
Comment=A high-performance, multiplayer code editor.
TryExec=$APP_CLI
StartupNotify=$DO_STARTUP_NOTIFY
Exec=$APP_CLI $APP_ARGS
Icon=$APP_ICON
Categories=Utility;TextEditor;Development;IDE;
Keywords=bspterm;
# To add Bspterm to "Open Folder With..." context menu, add `inode/directory` to the MimeType field (semicolon separated)
MimeType=text/plain;application/x-zerosize;x-scheme-handler/bspterm;
Actions=NewWorkspace;

[Desktop Action NewWorkspace]
Exec=$APP_CLI --new $APP_ARGS
Name=Open a new workspace
