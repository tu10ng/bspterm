#!/usr/bin/env bash

channel=$(cat crates/bspterm/RELEASE_CHANNEL)

tag_suffix=""
case $channel in
  stable)
    ;;
  preview)
    tag_suffix="-pre"
    ;;
  *)
    echo "this must be run on either of stable|preview release branches" >&2
    exit 1
    ;;
esac

exec script/lib/bump-version.sh bspterm v "$tag_suffix" patch
